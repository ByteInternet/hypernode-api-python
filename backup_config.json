{
    "ssh": {
        "host": "example.com",
        "port": 22,
        "user": "username",
        "location": "/path/on/remote/server"
    },
    "local": {
        "source_folder": "/path/to/source/folder", 
        "backup_folder": "/path/to/store/backups"
    },
    "mysql": {
        "host": "db.example.com",
        "user": "dbuser",
        "password": "dbpassword",
        "database": "dbname"
